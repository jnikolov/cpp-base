{
    "targets": {
        "bootstrap": {
            "cmd": "mkdir bin",
            "sh": true
        },

        "install": {
            "cmd": "conan install .. --build=missing",
            "sh": true,
            "cwd": "{PROJECT_PATH}/bin"
        },

        "generate": {
            "cmd": "cmake ..",
            "sh": true,
            "cwd": "{PROJECT_PATH}/bin"
        },

        "make": {
            "cmd": "cmake --build . --config Debug -- -j8",
            "sh": true,
            "cwd": "{PROJECT_PATH}/bin"
        },

        "clean": {
          "cmd": "cmake --build . --target 'clean'",
          "sh": true,
          "cwd": "{PROJECT_PATH}/bin"
        },

        "run": {
            "cmd": "./sampleApp",
            "sh": true,
            "cwd": "{PROJECT_PATH}/bin/bin"
        },

        "test": {
            "cmd": "./test.sampleApp",
            "sh": true,
            "cwd": "{PROJECT_PATH}/bin/bin"
        }
    }
}
